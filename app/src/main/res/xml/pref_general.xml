<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/pref_location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:key="@string/pref_temperature_units_key"
        android:title="@string/pref_temperature_units_title"
        android:dialogTitle="@string/pref_temperature_units_title"
        android:entries="@array/pref_temperature_system_entries"
        android:entryValues="@array/pref_temperature_system_entries"
        android:defaultValue="@string/pref_temperature_units_default" />

    <CheckBoxPreference
        android:key="@string/pref_notification_key"
        android:title="@string/pref_notif_title"
        android:summary="@string/pref_notif_summ"
        android:defaultValue="true"
        />
</PreferenceScreen>
